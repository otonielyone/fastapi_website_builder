[Unit]
Description=Gunicorn instance to serve FastAPI
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/home/oyone/bright_api
ExecStart=/usr/local/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker main:app --bind 0.0.0.0:5000
Restart=always

[Install]
WantedBy=multi-user.target

